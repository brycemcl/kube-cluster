sudo su
## remove swap
nano /etc/fstab
apt-get update && apt-get install -y apt-transport-https curl containerd kubectl kubelet kubeadm haproxy && apt-mark hold kubelet kubeadm kubectl
systemctl enable haproxy
cp config/containerd.conf /etc/modules-load.d/containerd.conf
cp config/k8s.conf /etc/sysctl.d/k8s.conf 
cp config/haproxy.cfg /etc/haproxy/haproxy.cfg
cp config/sys-fs-bpf.mount /etc/systemd/system/sys-fs-bpf.mount
reboot
